<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:id="@+id/text_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp" />

    <!-- BIG current temperature display -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_app_name"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/group_temperature"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="28"
            android:id="@+id/text_temperature"
            android:layout_centerHorizontal="true"
            android:textSize="108dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°C"
            android:layout_toRightOf="@id/text_temperature"
            android:layout_alignBaseline="@+id/text_temperature"
            android:textSize="24dp" />
    </RelativeLayout>


    <!-- wrapper for two buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/group_temperature"
        android:gravity="center_horizontal"
        android:id="@+id/group_button"
        >
        <!-- switch state toggle -->
        <com.getswitchpal.android.ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:id="@+id/button_switch"
            android:layout_marginBottom="30dp"
            android:textOn="On"
            android:textOff="Off" android:checked="false"/>

        <com.getswitchpal.android.ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:id="@+id/button_mode"
            android:layout_marginBottom="30dp"
            android:checked="true"
            android:textOff="Manual"
            android:textOn="Auto"
            android:enabled="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_button"
        android:gravity="center_horizontal"
        android:id="@+id/group_range"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="26°C"
            android:id="@+id/text_temperature_min"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="/"
            android:id="@+id/text_temperature_separator"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="28°C"
            android:id="@+id/text_temperature_max"
            />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textSize="16dp"
        android:id="@+id/button_connect"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="00:11:22:33:44:55"
        android:id="@+id/text_device_address"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_connect"
        android:textColor="#BBBBBB"
        android:textSize="12dp" />

    <!-- when there is operation going on, add this overlay -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/overlay_progress"
        android:visibility="visible"
        android:background="@color/background_material_light"
        android:alpha="0.96">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/progressbar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/progressbar"
            android:layout_marginBottom="20dp"
            android:text="Operation in process"
            android:id="@+id/text_progress"
            />
    </RelativeLayout>

</RelativeLayout>
